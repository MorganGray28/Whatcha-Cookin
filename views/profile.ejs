<% include partials/header %>
<div class="container">
    <h3 class="mb-5">profile page</h3> 

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-fav-tab" data-toggle="pill" href="#pills-fav" role="tab" aria-controls="pills-favorite" aria-selected="true">Favorites</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">My Recipes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Comments</a>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-fav" role="tabpanel" aria-labelledby="pills-favorite-tab">
            <div class="row">
                <div class="card-deck">
                <% user.favorites.forEach((recipe) => { %>
                    <div class="col-lg-3 col-6 test-col">
                        <a href="/recipes/<%=recipe._id%>">
                            <div class="card">
                                <img src="<%=recipe.image%>" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title"><%= recipe.title %></h5>
                                    <p class="card-text"><%= recipe.description.substring(0, 30) + '...' %></p>
                                    <% if(currentUser) { %>
                                    <div>
                                        <form action="/recipes/<%=recipe._id%>/favorite" method="POST">
                                            <% var isFavorited = currentUser.favorites.some((favorite) => { %>
                                                <% return favorite.equals(recipe._id); %>
                                            <% }); %>
        
                                            <% if(isFavorited) { %>
                                            <button class="btn btn-sm btn-danger">Favorited!!</button> 
                                            <% } else { %>
                                            <button class="btn btn-sm btn-danger">Favorite</button>
                                            <% } %>
                                        </form>
                                    </div>
                                    <% } %>
                                    
                                    <div class="btn-edit-delete">
                                    <% if(currentUser && currentUser._id.equals(recipe.author.id)) { %>
                                        <a href="/recipes/<%=recipe._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                                        <form action="/recipes/<%=recipe._id%>?_method=DELETE" method="POST" class="btn-inline">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form> 
                                    <% } %>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
                </div>
            </div>

            
        </div>
        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                <div class="row">
                    <div class="card-deck">
                    <% user.userRecipes.forEach((recipe) => { %>
                        <div class="col-lg-3 col-6 test-col">
                            <a href="/recipes/<%=recipe._id%>">
                                <div class="card">
                                    <img src="<%=recipe.image%>" class="card-img-top">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= recipe.title %></h5>
                                        <p class="card-text"><%= recipe.description.substring(0, 30) + '...' %></p>
                                        <% if(currentUser) { %>
                                        <div>
                                            <form action="/recipes/<%=recipe._id%>/favorite" method="POST">
                                                <% var isFavorited = currentUser.favorites.some((favorite) => { %>
                                                    <% return favorite.equals(recipe._id); %>
                                                <% }); %>
            
                                                <% if(isFavorited) { %>
                                                <button class="btn btn-sm btn-danger">Favorited!!</button> 
                                                <% } else { %>
                                                <button class="btn btn-sm btn-danger">Favorite</button>
                                                <% } %>
                                            </form>
                                        </div>
                                        <% } %>
                                        
                                        <div class="btn-edit-delete">
                                        <% if(currentUser && currentUser._id.equals(recipe.author.id)) { %>
                                            <a href="/recipes/<%=recipe._id%>/edit" class="btn btn-sm btn-warning">Edit</a>
                                            <form action="/recipes/<%=recipe._id%>?_method=DELETE" method="POST" class="btn-inline">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form> 
                                        <% } %>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                    </div>
                </div>

        </div>
        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">

        </div>
    </div>
</div>


<% include partials/footer %>