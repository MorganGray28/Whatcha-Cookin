<% include partials/header %>

<div class="container">
    <div class="mt-4 row">
        <div class="col-lg-6 order-1 order-lg-0">
            <h1><%= recipe.title %></h1>
            <p class="mb-4">created by: <%= recipe.author %></p>
            <hr>
            <p><span class="text-bold">Cooking Time:</span> <%= recipe.time %> </p>
            <p> <%= recipe.description %> </p>

            <h2 class="mt-3">Ingredients:</h2>

            <% recipe.ingredients.forEach((ingredient, index) => { %>
                <p><span class="ingredient"><%= index + 1 %>)</span> <%= ingredient %></p>
            <% }); %>

        </div>
        <div class="col-lg-6 order-0 order-lg-1">
            <div>
                <img width="400px" src="<%=recipe.image%>" alt="">
            </div>
        </div>
    </div>
    <hr>

    <div class="row mt-3">
        <div class="col-lg-12">
            <h2>Directions: </h2>
            <% recipe.directions.forEach((direction, index) => { %>
                <p><span class="ingredient"><%= index + 1 %>) </span> <%= direction %> </p>
            <% }); %>
        </div>
    </div>


</div>


<% include partials/footer %>