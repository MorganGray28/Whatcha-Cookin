<% include ../partials/header %>
<div class="container">
    <h1 class="my-3">Edit <%= recipe.title %></h1>

    <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Recipe Title</label>
            <input type="text" name="recipe[title]" required class="form-control" id="title" aria-describedby="recipeTitle" value="<%=recipe.title%>" placeholder="Enter title">
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="recipe[description]" class="form-control" rows="2"><%= recipe.description %></textarea>
        </div>
        <div class="form-group">
            <label for="image">Add a picture</label>
            <input id="image" type="file" name="image" accept="image/*" class="form-control-file" aria-describedby="recipeImage">
        </div>
        <div class="form-group">
            <label for="time">Total cooking time</label>
            <input id="time" type="text" name="recipe[time]" required class="form-control" aria-describedby="cookingTime" value="<%= recipe.time %>">
        </div>
        <div class="form-group">
            <label for="ingredients">Ingredients:</label>
            <textarea id="ingredients" name="recipe[ingredients]" required class="form-control" rows="6" placeholder="Write your ingredients on separate lines"><%=recipe.ingredients.join('\r\n')%></textarea>
        </div>
        <div class="form-group">
            <label for="directions">Directions:</label>
            <textarea id="directions" name="recipe[directions]" required class="form-control" rows="3" placeholder="Write each step on a separate line"><%=recipe.directions.join('\r\n')%></textarea>
        </div>

        <button class="btn btn-sm btn-primary">Submit!</button>
    </form>

    <a href="/recipes">Go Back</a>

</div>

<% include ../partials/footer %>